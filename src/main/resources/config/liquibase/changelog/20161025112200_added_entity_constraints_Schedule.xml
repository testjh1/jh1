    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Schedule.
    -->
    <changeSet id="20161025112200-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="schedules_id"
                                 baseTableName="schedule_presentation"
                                 constraintName="schedule_prese_schedules_id"
