                                 baseTableName="schedule_presentation"
                                 constraintName="schedule_prese_presentations_id"
                                 referencedColumnNames="id"
                                 referencedTableName="presentation"/>
        
        <addForeignKeyConstraint baseColumnNames="schedules_id"
                                 baseTableName="schedule_room"
                                 constraintName="fk_schedule_room_schedules_id"
