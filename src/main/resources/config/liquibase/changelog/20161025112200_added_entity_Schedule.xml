<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Schedule.
    -->
    <changeSet id="20161025112200-1" author="jhipster">
        <createTable tableName="schedule">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="begin_schedule" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <column name="end_schedule" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="schedule" columnName="begin_schedule" columnDataType="datetime"/>
        <dropDefaultValue tableName="schedule" columnName="end_schedule" columnDataType="datetime"/>
        
        <createTable tableName="schedule_presentation">
            <column name="presentations_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="schedules_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="schedules_id, presentations_id" tableName="schedule_presentation"/>
        
        <createTable tableName="schedule_room">
            <column name="rooms_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="schedules_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="schedules_id, rooms_id" tableName="schedule_room"/>
        
    </changeSet>
</databaseChangeLog>
